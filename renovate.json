    "config:best-practices",
    ":disableRateLimiting"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/^kubernetes/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/^kubernetes/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/^kubernetes/.+\\.ya?ml$/"
    ]
  },
  "git-submodules": {
    "enabled": true
  }
}
